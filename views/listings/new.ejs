
 <% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
      <div class="col-8">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings">
      <div  class="mb-3">
      <label for="title" class="form-label"> Title</title></label>
      <input name="listing[title]" placeholder="enter title" type="text" class="form-control"/>
    </div>
    <br /><br />
      <div class="mb-3">
        <label for="description" class="form-label"> Description</title></label>
      <textarea
        name="listing[description]"
        class="form-control"
      ></textarea>
    </div>
      <br /><br />
      <div class="mb-3">
        <label for="image" class="form-label"> image-link </label>
      <input
      name="listing[image]"
        placeholder="enter image URL/Link"
        type="text" class="form-control"
      />
      
    </div>
    <br /><br />
<div class="row">
      <div class="mb-3 col-md-4">
        <label for="Price" class="form-label"> price </label>
      <input name="listing[price]" placeholder="enter price" type="number" class="form-control" />
      
    </div>
    <br /><br />
    <div class="mb-3 col-md-8">
      <label for="country" class="form-label"> Country </label>
      <input name="listing[country]" placeholder="enter country" type="text" class="form-control"/>
     
    
    </div>
  </div>
    <br /><br />
    <div class="mb-3">
      <label for="location" class="form-label"> Location</label>
      <input
        name="listing[location]"
        placeholder="enter location"
        type="text" class="form-control"
      />
     </div>
     
      <button class="btn btn-dark add-btn mt-3 ">Add</button>
      
    </form>
  </div>
</div>
  </body>
