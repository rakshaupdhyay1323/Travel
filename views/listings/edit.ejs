<% layout("/layouts/boilerplate") %>
   <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
      <div class="row mt-3">
        <div class="col-8 offset-2">

      <div  class="mb-3">
        <label for="title" class="form-label"> Title </label>
      <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control"/>
      </div>


      <br /><br />
      <div  class="mb-3">
        <label for="description" class="form-label"> Description</label>
      <textarea name="listing[description]" class="form-control">
<%= listing.description %></textarea
      >
      </div>
      
      <div  class="mb-3">
        <label for="image" class="form-label">Image</label>
      <input name="listing[image]" value="<%= listing.image %>" type="text" class="form-control" />
      </div>
      

      <div  class="mb-3">
        <label for="price" class="form-label">Price</title></label>
      <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control" />
      <br /><br />

      <div  class="mb-3">
        <label for="country" class="form-label">Country</title></label>
      <input
        name="listing[country]"
        value="<%= listing.country %>"
        type="text" class="form-control"
      />
      
      <div  class="mb-3">
        <label for="location" class="form-label">Location</title></label>
      <input
        name="listing[location]"
        value="<%= listing.location %>"
        type="text" class="form-control"
      />
      
      <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
  </div>
      </div>
      